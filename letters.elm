module Letters exposing (alphabet)

import Dict exposing (Dict)
import Svg exposing (Svg, svg, circle, line)
import Svg.Attributes exposing (..)


type alias Point =
    ( Float, Float )


type alias Letter =
    { points : List Point, lines : List ( Int, Int ) }


type alias Alphabet =
    Dict Char Letter


main =
    svg [ viewBox "0 0 1000 1000", stroke "black" ]
        (List.indexedMap viewLetter <| String.toList "ABCDEFGHIJKLMNOPQRSTUVWXYZ")


viewLetter : Int -> Char -> Svg msg
viewLetter n c =
    let
        toCoord ( ( xa, ya ), ( xb, yb ) ) =
            line
                [ x1 <| toString <| 20 + 20 * xa + (toFloat <| 80 * (n % 5))
                , y1 <| toString <| 20 + 20 * ya + (toFloat <| 120 * (n // 5))
                , x2 <| toString <| 20 + 20 * xb + (toFloat <| 80 * (n % 5))
                , y2 <| toString <| 20 + 20 * yb + (toFloat <| 120 * (n // 5))
                ]
                []
    in
        svg []
            (List.map toCoord <| Maybe.withDefault [] <| Dict.get c alphabet)


